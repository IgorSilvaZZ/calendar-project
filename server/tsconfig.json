{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@domains/*": ["src/domains/*"],
      "@shared/*": ["src/shared/*"],
      "@dtos/*": ["src/application/dtos/*"],
      "@errors/*": ["src/shared/errors/*"],
      "@validators/*": ["src/shared/validators/*"],
      "@test/*": ["src/test/*"]
    },
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
