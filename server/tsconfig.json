{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@domains/*": ["src/domains/*"],
      "@errors/*": ["src/shared/errors/*"]
    },
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
